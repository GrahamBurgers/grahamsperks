<Entity tags="hittable,projectile_player,graham_rainbow" name="$projectile_default">

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="260"
			mass="0.07"
			>
    	</VelocityComponent> 
	</Base>

  <ProjectileComponent 
    _enabled="1" 
	speed_min="230"
	speed_max="270"
	bounces_left="4"
	bounce_energy="1.1"
	bounce_at_any_angle="1"
	bounce_always="1"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    on_collision_die="1"
	damage="0.1"
    lifetime="500"
	shoot_light_flash_r="90"
    shoot_light_flash_g="150"
    shoot_light_flash_b="10"
    shoot_light_flash_radius="48"
	knockback_force="1.0"
	physics_impulse_coeff="2000"
	>
    <config_explosion
        never_cache="1" 
		damage="0"
		camera_shake="3.5" 
		explosion_radius="9" 
		explosion_sprite="data/particles/explosion_032_plasma.xml" 
		explosion_sprite_lifetime="0" 
		create_cell_material="graham_confuse"
		create_cell_probability="80"
		hole_destroy_liquid="0" 
		hole_enabled="1" 
		hole_image="data/temp/explosion_hole.png" 
		particle_effect="0" 
		damage_mortals="1" 
		physics_explosion_power.min="0.1"
		physics_explosion_power.max="0.2"
		physics_throw_enabled="1" 
		shake_vegetation="1" 
		sparks_count_max="20" 
		sparks_count_min="7" 
		sparks_enabled="0" 
		stains_enabled="1" 
		stains_radius="9"
        audio_enabled="0" >
    </config_explosion>
  </ProjectileComponent>
  
	<SpriteComponent 
		_enabled="1" 
		alpha="1" 
		image_file="mods/grahamsperks/files/projectiles_gfx/rainbow.xml" 
		next_rect_animation="" 
		offset_x="0" 
		offset_y="0" 
		rect_animation="" 
		update_transform_rotation="0"
		>
	</SpriteComponent>

	<ParticleEmitterComponent 
		emitted_material_name="material_rainbow"
		count_min="14"
		count_max="18"
		offset.x="-2"
		offset.y="0"
		x_pos_offset_min="-1"
		y_pos_offset_min="-1"
		x_pos_offset_max="1"
		y_pos_offset_max="1"
		x_vel_min="-50"
		x_vel_max="50"
		y_vel_min="-50"
		y_vel_max="50"
		is_trail="1"
		trail_gap="2"
		lifetime_min="0.1"
		lifetime_max="0.2"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="5"
		emission_interval_max_frames="8"
		is_emitting="1"
		>
	</ParticleEmitterComponent>

    <HitboxComponent 
        _enabled="1" 
        aabb_min_x="-5" 
        aabb_max_x="5" 
        aabb_min_y="-5" 
        aabb_max_y="5" >
    </HitboxComponent>

    <DamageModelComponent 
        _enabled="1" 
        hp="0.2"
        fire_probability_of_ignition="0" 
        falling_damages="0" 
        air_needed="0" 
        materials_damage="0"
        ragdoll_filenames_file=""
        blood_material="material_rainbow"
        blood_multiplier="0"
        create_ragdoll="0" >
    </DamageModelComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_acid">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/grahamsperks/files/spells/rainbow.xml"
		>
	</VariableStorageComponent>

</Entity>
