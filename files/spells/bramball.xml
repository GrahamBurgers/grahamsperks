	speed_min="180"
	speed_max="220"
	bounces_left="3"
	bounce_energy="0.7"
	bounce_at_any_angle="1"
	bounce_always="1"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    on_collision_die="1"
	damage="0"
    lifetime="80"
	shoot_light_flash_r="0"
    shoot_light_flash_g="150"
    shoot_light_flash_b="0"
    shoot_light_flash_radius="48"
	knockback_force="1.0"
	physics_impulse_coeff="2000"
	spawn_entity="mods/grahamsperks/files/entities/brambles.xml"
	>
    <config_explosion
        never_cache="1" 
		damage="0"
		camera_shake="3.5" 
		explosion_radius="8" 
		explosion_sprite="data/particles/explosion_008_plasma_green.xml" 
		explosion_sprite_lifetime="0" 
		hole_destroy_liquid="0" 
		hole_enabled="0" 
		hole_image="data/temp/explosion_hole.png" 
		particle_effect="0" 
		damage_mortals="1" 
		physics_explosion_power.min="0.1"
		physics_explosion_power.max="0.2"
		physics_throw_enabled="1" 
		shake_vegetation="1" 
		sparks_count_max="20" 
		sparks_count_min="7" 
		sparks_enabled="0" 
		stains_enabled="1" 
		stains_radius="9"
        audio_enabled="0" >
    </config_explosion>
	<damage_by_type slice="0.04" >
    </damage_by_type>
  </ProjectileComponent>

	<ParticleEmitterComponent
		emit_cosmetic_particles="1"
		emitted_material_name="cursed_liquid"
		x_vel_min="0"
		x_vel_max="0"
		y_vel_min="-2"
		y_vel_max="2"
		count_min="3"
		count_max="3"
		lifetime_min="0.35"
		lifetime_max="0.35"
		is_trail="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		airflow_scale="0"
		gravity.x="0"
		gravity.y="0"
		render_back="1"
	></ParticleEmitterComponent>
  
	<SpriteComponent 
		_enabled="1" 
		alpha="1" 
		image_file="mods/grahamsperks/files/projectiles_gfx/bramball.xml" 
		next_rect_animation="" 
		offset_x="0" 
		offset_y="0" 
		rect_animation="" 
		update_transform_rotation="1"
		>
	</SpriteComponent>

    <HitboxComponent 
        _enabled="1" 
        aabb_min_x="-5" 
        aabb_max_x="5" 
        aabb_min_y="-5" 
        aabb_max_y="5" >
    </HitboxComponent>

  	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/bullet_arrow">
	</AudioComponent>

	<LuaComponent
		execute_on_added="0"
		remove_after_executed="1"
		script_source_file="mods/grahamsperks/files/scripts/bramball_lifetime.lua"
	></LuaComponent>
  
	<VariableStorageComponent
		name="bramball_lifetime"
		value_int="0"
		>
	</VariableStorageComponent>

	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/grahamsperks/files/spells/bramball.xml"
		>
	</VariableStorageComponent>

</Entity>
