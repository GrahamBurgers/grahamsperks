<Entity 
  name="$projectile_default"  tags="projectile_player"
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="0.1"
			mass="0.05"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="3"
    lob_max="3.5"
	friendly_fire="0"
	collide_with_shooter_frames="6"
    speed_min="320"
    speed_max="350"
    friction="0.4"
    direction_random_rad="0.3"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1" 
    on_collision_die="1"
    lifetime="120"
    damage="0.0"
    velocity_sets_scale="1"
    lifetime_randomness="7"
    ragdoll_force_multiplier="0.04"
    hit_particle_force_multiplier="5.5 "
    camera_shake_when_shot="5.0"
    shoot_light_flash_radius="20"
	muzzle_flash_file=""
	knockback_force="2.0"
	>
    <config_explosion
      never_cache="0" 
      camera_shake="10" 
      explosion_radius="6"
			explosion_sprite="data/particles/explosion_032_slimeburst.xml" 
      explosion_sprite_lifetime="0" 
      create_cell_probability="0" 
      hole_destroy_liquid="0" 
      hole_enabled="1" 
      ray_energy="25000"
      damage="0.0"
      particle_effect="0"
      damage_mortals="1"
	  physics_explosion_power.min="0.15"
      physics_explosion_power.max="0.35" 
      shake_vegetation="1" 
      sparks_count_min="4" 
      sparks_count_max="10" 
      sparks_enabled="1" 
      stains_enabled="1"
      stains_radius="12"
      audio_event_name="explosions/grenade_small" >
    </config_explosion>
    <damage_by_type>
    </damage_by_type>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/grahamsperks/files/projectiles_gfx/toxic_potion.png" 
    next_rect_animation="" 
    offset_x="5" 
    offset_y="5" 
    rect_animation="" 
     >
  </SpriteComponent>
  
  <AudioComponent
		file="data/audio/Desktop/materials.bank"
    event_root="collision/glass_potion">
	</AudioComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_slime">
  </AudioComponent>

  <LuaComponent
    execute_every_n_frame="1"
    execute_on_added="0"
    script_source_file="mods/grahamsperks/files/scripts/toxic_potion_store.lua"
    remove_after_executed="1"
  ></LuaComponent>

  <LuaComponent
    execute_every_n_frame="-1"
    execute_on_added="0"
    execute_on_removed="1"
    script_source_file="mods/grahamsperks/files/scripts/toxic_potion.lua"
  ></LuaComponent>
  
  <VariableStorageComponent
		name="projectile_file"
		value_string="mods/grahamsperks/files/spells/toxic_potion.xml"
		>
	</VariableStorageComponent>
  
</Entity>
