			<damage_multipliers
				melee="0"
			></damage_multipliers>
		</DamageModelComponent>
			
		<SpriteComponent
			image_file="mods/grahamsperks/files/projectiles_gfx/support_drone_wings.xml"
		></SpriteComponent>
		
