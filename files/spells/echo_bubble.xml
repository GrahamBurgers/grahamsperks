<Entity name="$projectile_default">
	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			_enabled="1"
			air_friction="0"
			terminal_velocity="180"
			gravity_y="0"
			mass="0.04"
			>
		</VelocityComponent> 
	</Base>

	<ProjectileComponent 
		speed_min="0"
		speed_max="0"
		direction_random_rad="0"
		die_on_liquid_collision="0"
		on_death_explode="0"
		on_death_gfx_leave_sprite="0"
		on_lifetime_out_explode="1"
		friendly_fire="0"
		collide_with_entities="1"
		collide_with_world="0"
		penetrate_world="1"
		shoot_light_flash_radius="100"
		shoot_light_flash_r="0"
		shoot_light_flash_g="130"
		shoot_light_flash_b="130"
		lifetime="180"
		hit_particle_force_multiplier="0.25"
		knockback_force="1.5"
		ragdoll_force_multiplier="0.05"
		damage="0.48"
		collide_with_shooter_frames="-1"
		damage_every_x_frames="3"
		explosion_dont_damage_shooter="1"
		> 
		<config_explosion
			never_cache="1" 
			camera_shake="0"
			damage="0.8"
			explosion_radius="8" 
			explosion_sprite="mods/grahamsperks/files/projectiles_gfx/echo_burst.xml" 
			explosion_sprite_lifetime="0.2" 
			create_cell_probability="0" 
			create_cell_material="" 
			hole_destroy_liquid="0" 
			hole_enabled="1" 
			ray_energy="3000000"
			particle_effect="0" 
			damage_mortals="1"
			physics_explosion_power.min="0.1"
			physics_explosion_power.max="0.3" 
			physics_throw_enabled="1" 
			shake_vegetation="1" 
			sparks_enabled="0" 
			material_sparks_enabled="0"
			light_fade_time="0.1" 
			light_enabled="1"
			light_r="0"
			light_g="130"
			light_b="130"
			light_radius_coeff="32"
			stains_enabled="0" 
			stains_image="data/temp/explosion_stain.png"
			spark_material="spark" >
		</config_explosion>
	</ProjectileComponent>

	<LuaComponent
		script_source_file="mods/grahamsperks/files/scripts/echo_bubble_copy.lua"
	></LuaComponent>

	<!-- main sprite -->
	<SpriteComponent
		image_file="mods/grahamsperks/files/projectiles_gfx/echo_bubble.xml"
		alpha="1"
		z_index="-2"
		additive="0"
		emissive="0" >
	</SpriteComponent>

	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/grahamsperks/files/spells/echo_bubble.xml"
		>
	</VariableStorageComponent>

  <GameAreaEffectComponent
      radius="5"
  ></GameAreaEffectComponent>

</Entity>
