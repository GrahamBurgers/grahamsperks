<Entity 
  name="$projectile_default" tags="projectile_player"
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="-1"
			gravity_y="0"
			mass="0.04"
		>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.8"
    lob_max="1.0"
    speed_min="280"
    speed_max="280"
    direction_random_rad="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    on_collision_die="1"
  	die_on_liquid_collision="0"
    lifetime="20"
    damage="0.0"
    velocity_sets_scale="1"
    ragdoll_force_multiplier="0.01"
    ragdoll_fx_on_collision="BLOOD_SPRAY"
    hit_particle_force_multiplier="0.25"
    camera_shake_when_shot="5.0"
    bounces_left="10"
	  muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_laser.xml"
    damage_game_effect_entities="data/entities/misc/effect_on_fire.xml,"
	  shoot_light_flash_radius="180"
    shoot_light_flash_r="30"
    shoot_light_flash_g="170"
    shoot_light_flash_b="210" 
	  knockback_force="1.0"
  	physics_impulse_coeff="2000"
  	penetrate_entities="1"
	>
	<damage_by_type fire="0.4" >
    </damage_by_type>
    <config_explosion
      never_cache="0" 
      camera_shake="4" 
      explosion_radius="2"
      explosion_sprite="mods/grahamsperks/files/projectiles_gfx/empty.png" 
      explosion_sprite_lifetime="1" 
      create_cell_probability="40" 
	    create_cell_material="fire" 
      hole_destroy_liquid="0"
      explosion_sprite_emissive="1"
      explosion_sprite_additive="1"
      hole_enabled="1"
      ray_energy="20000"
      damage="0"
      particle_effect="0"
      damage_mortals="1"
      physics_explosion_power.min="0.05" 
      physics_explosion_power.max="0.1"
      physics_throw_enabled="1"
      shake_vegetation="1" 
      sparks_count_min="4" 
      sparks_count_max="10" 
      sparks_enabled="1" 
      stains_enabled="0"
      stains_radius="12"
      >
    </config_explosion>
  </ProjectileComponent>

  <MagicConvertMaterialComponent
    from_material_tag="[burnable]"
    to_material="liquid_fire"
    steps_per_frame="8"
    loop="1"
    is_circle="1"
    radius="8" >
  </MagicConvertMaterialComponent>

  <MagicConvertMaterialComponent
    from_material_tag="[frozen]"
    to_material="steam"
    steps_per_frame="8"
    loop="1"
    is_circle="1"
    radius="8" >
  </MagicConvertMaterialComponent>

  <MagicConvertMaterialComponent
    from_material_tag="[cold]"
    to_material="steam"
    steps_per_frame="8"
    loop="1"
    is_circle="1"
    radius="8" >
  </MagicConvertMaterialComponent>

  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="246"
    g="55"
    b="9">
  </LightComponent>

  <ParticleEmitterComponent 
    emitted_material_name="fire"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-10"
    y_vel_max="10"
    count_min="4"
    count_max="4"
    lifetime_min="0.1"
    lifetime_max="0.3"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="2"
    is_emitting="1"
    is_trail="1"
    >
  </ParticleEmitterComponent>

  <ParticleEmitterComponent 
    emitted_material_name="spark_red"
    offset.x="0"
    offset.y="0"
	  gravity.y="0.0"
	  x_vel_min="0"
    x_vel_max="0"
    y_vel_min="-2"
    y_vel_max="2"
    count_min="1"
    count_max="2"
	  trail_gap="0.8"
    lifetime_min="0.1"
    lifetime_max="0.8"
    emit_real_particles="0"
	  render_on_grid="1"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="2"
  	fade_based_on_lifetime="1"
    is_trail="1"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/grahamsperks/files/spells/infernal_glare_beam.xml"
		>
	</VariableStorageComponent>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/flamethrower">
	</AudioComponent>
	

</Entity>