<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0"
			air_friction="-0.2"
			mass="0.07"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent
    lob_min="0.5"
    lob_max="0.7"
    speed_min="150"
    speed_max="140"
    friction="1"
    direction_random_rad="1"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1"
    lifetime="120"
    lifetime_randomness="14"
    damage="0.30"
    ragdoll_force_multiplier="0.04"
    hit_particle_force_multiplier="0.1"
	  muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_pink.xml"
    shoot_light_flash_r="255"
    shoot_light_flash_g="0"
    shoot_light_flash_b="0"
    shoot_light_flash_radius="72" 
	  knockback_force="2.2"
    physics_impulse_coeff="1500"
    friendly_fire="0"
    damage_every_x_frames="600"
    die_on_liquid_collision="0"
    on_collision_die="1"
    penetrate_world="0"
    penetrate_world_velocity_coeff="0.4"
    penetrate_entities="0"
    velocity_sets_y_flip="1"
    >
    <config_explosion
    never_cache="1" 
    damage="0"
    camera_shake="0.5" 
    explosion_radius="6" 
    explosion_sprite="data/particles/explosion_016_plasma_red.xml" 
    explosion_sprite_lifetime="0" 
    create_cell_probability="0" 
    hole_destroy_liquid="0"
    explosion_sprite_additive="1"
    hole_enabled="1" 
    ray_energy="4000000"
    max_durability_to_destroy="10"
    particle_effect="0" 
    damage_mortals="1"
    physics_explosion_power.min="0.02" 
    physics_explosion_power.max="0.1" 
    physics_throw_enabled="1"  
    shake_vegetation="1" 
    sparks_count_max="20" 
    sparks_count_min="7" 
    sparks_enabled="0"  
    material_sparks_enabled="1"
    material_sparks_count_max="2"
    material_sparks_count_min="0" 
    light_enabled="1" 
    light_r="40"
    light_g="90"
    light_b="10"
    stains_enabled="1"
    stains_radius="3"
    >
    </config_explosion>
    <damage_critical
    chance="50">
    </damage_critical>
  </ProjectileComponent>

  <HomingComponent
  homing_targeting_coeff="20.0"
  homing_velocity_multiplier="0.2"
  detect_distance="100"
>
</HomingComponent>

<LuaComponent
  script_source_file="data/scripts/projectiles/homing_accelerating.lua"
  execute_every_n_frame="1"
  >
</LuaComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/grahamsperks/files/projectiles_gfx/redhand.xml" 
    next_rect_animation=""
    rect_animation="" 
    additive="1"
    >
  </SpriteComponent>
	
  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_heavy_fast">
  </AudioComponent>

  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/grahamsperks/files/spells/redhand.xml"
		>
	</VariableStorageComponent>

</Entity>
