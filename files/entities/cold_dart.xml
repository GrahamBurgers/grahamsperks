<Entity name="$projectile_default" tags="" >

	<Base file="data/entities/base_projectile.xml" >
    <VelocityComponent
      air_friction="0"
  	  gravity_y="0"
  	  mass="0"
	    >
    </VelocityComponent>
	</Base>

  <ProjectileComponent 
    damage="0"
    lob_min="0.9"
    lob_max="1.0"
    speed_min="280"
    speed_max="300"
    friction="0.6"
    direction_random_rad="0.04"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1" 
    on_collision_die="1"
    die_on_liquid_collision="0"
    lifetime="60"
    velocity_sets_scale="1"
    lifetime_randomness="0"
    ragdoll_force_multiplier="0.04"
    hit_particle_force_multiplier="5.5"
    camera_shake_when_shot="1.0"
    shoot_light_flash_r="255"
    shoot_light_flash_g="140"
    shoot_light_flash_b="10"
    shoot_light_flash_radius="60"
    bounces_left="0"
    dont_collide_with_tag="enemy"
    penetrate_world="0"
    >
    <damage_by_type
      electricity="0.16"
      >
    </damage_by_type>
    <config_explosion
      never_cache="0" 
      camera_shake="4" 
      explosion_radius="0"
      explosion_sprite="data/particles/smoke_02.xml" 
      explosion_sprite_lifetime="0" 
      hole_destroy_liquid="0"
      explosion_sprite_emissive="1"
      explosion_sprite_additive="1"
      hole_enabled="0" 
      ray_energy="0"
      damage="0"
      particle_effect="0"
      damage_mortals="0"
      physics_explosion_power.min="0.05" 
      physics_explosion_power.max="0.1"
      physics_throw_enabled="1"
      shake_vegetation="1" 
      sparks_count_min="4" 
      sparks_count_max="10" 
      sparks_enabled="1" 
      stains_enabled="1"
      stains_radius="4"
      >
    </config_explosion>
  </ProjectileComponent>

  <ParticleEmitterComponent
    emit_cosmetic_particles="1"
    emitted_material_name="magic_liquid_mana_regeneration"
    x_vel_min="0"
    x_vel_max="0"
    y_vel_min="-2"
    y_vel_max="2"
    count_min="8"
    count_max="8"
    lifetime_min="0.15"
    lifetime_max="0.25"
    is_trail="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    airflow_scale="0"
    gravity.x="0"
    gravity.y="0"
  ></ParticleEmitterComponent>
	
  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_burst_of_air">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/grahamsperks/files/entities/cold_dart.xml"
		>
	</VariableStorageComponent>
  
</Entity>
