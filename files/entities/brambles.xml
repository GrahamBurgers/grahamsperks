<Entity name="$projectile_default" tags="projectile_player" >
	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			_enabled="1"
			air_friction="0"
			gravity_y="0"
			mass="0.04"
			>
		</VelocityComponent> 
	</Base>

	<ProjectileComponent 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="0"
		speed_max="0"
		direction_random_rad="0.15"
		die_on_liquid_collision="0"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0"
		on_lifetime_out_explode="1"
		friendly_fire="1"
		collide_with_entities="0"
		shoot_light_flash_radius="100"
		shoot_light_flash_r="255"
		shoot_light_flash_g="30"
		shoot_light_flash_b="30"
		damage="0"
        on_collision_die="0"
		explosion_dont_damage_shooter="1"
		lifetime="180"
		hit_particle_force_multiplier="0.25"
		knockback_force="1.5"
		ragdoll_force_multiplier="0.05"
		> 
		<config_explosion
			never_cache="1" 
			camera_shake="0"
			damage="0"
			explosion_radius="8" 
			explosion_sprite="data/particles/explosion_008_plasma_green.xml" 
			explosion_sprite_lifetime="0.2" 
			create_cell_probability="0" 
			create_cell_material="" 
			hole_destroy_liquid="0" 
			hole_enabled="0" 
			ray_energy="300000"
			particle_effect="0" 
			damage_mortals="1"
			physics_explosion_power.min="0.1"
			physics_explosion_power.max="0.3" 
			physics_throw_enabled="1" 
			shake_vegetation="1" 
			sparks_enabled="0" 
			material_sparks_enabled="0"
			stains_enabled="0" 
			stains_image="data/temp/explosion_stain.png"
			spark_material="spark" >
		</config_explosion>
        <damage_by_type slice="0.04" >
        </damage_by_type>
	</ProjectileComponent>

	<SpriteComponent
		image_file="mods/grahamsperks/files/projectiles_gfx/brambles.xml"
		additive="0"
		emissive="0" >
	</SpriteComponent>

    <LuaComponent
        execute_every_n_frame="1"
        script_source_file="mods/grahamsperks/files/scripts/brambles.lua"
    ></LuaComponent>

    <LuaComponent
        execute_on_added="1"
		remove_after_executed="1"
		execute_every_n_frame="1"
        script_source_file="mods/grahamsperks/files/scripts/bramble.lua"
    ></LuaComponent>
</Entity>