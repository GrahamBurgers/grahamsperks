<Entity tags="tipsy_ghost" >
	<HitboxComponent 
        _tags="enabled_in_world"
        aabb_min_x="-4" 
        aabb_max_x="4" 
        aabb_min_y="-3" 
        aabb_max_y="3"
    ></HitboxComponent>

    <VelocityComponent
        _tags="enabled_in_world"
		gravity_y="0"
		displace_liquid="0"
    ></VelocityComponent>

	<!-- ghost functionality and visuals -->		
	<SpriteComponent 
		image_file="mods/grahamsperks/files/entities/tipsy_ghost/tipsy_ghost_anim.xml"
		z_index="-0.5"
		>
	</SpriteComponent>

	<SpriteComponent 
		offset_x="3"
		offset_y="7"
		never_ragdollify_on_death="1"
		z_index="-0.45"
		image_file="mods/grahamsperks/files/entities/tipsy_ghost/charge_slider_back.png" >
	</SpriteComponent>

	<SpriteComponent 
		_tags="tipsy_slider"
		offset_x="3"
		offset_y="7"
		has_special_scale="1"
		special_scale_x="1"
		special_scale_y="1"
		never_ragdollify_on_death="1"
		z_index="-0.5"
		image_file="mods/grahamsperks/files/entities/tipsy_ghost/charge_slider_tipsy.png" >
	</SpriteComponent>

	<LuaComponent 
		script_source_file="mods/grahamsperks/files/scripts/tipsy_ghost.lua"
		execute_every_n_frame="1"
	></LuaComponent>

	<VariableStorageComponent
		_tags="tipsy_ghost_charge"
		value_float="0"
		value_int="0"
	></VariableStorageComponent>
	
	<LuaComponent 
		script_source_file="data/scripts/animals/tiny_ghost_move.lua"
		execute_every_n_frame="1"
		>
	</LuaComponent>

	<CellEaterComponent
		radius="150"
		eat_probability="100"
		limited_materials="1"
        materials="alcohol_gas"
	></CellEaterComponent>
	
	<AudioComponent
		file="data/audio/Desktop/animals.bank"
		event_root="animals/tiny_ghost" >
	</AudioComponent>

	<AudioLoopComponent
		file="data/audio/Desktop/animals.bank"
		event_name="animals/tiny_ghost/movement_loop"
		set_speed_parameter="1"
		auto_play="1">
	</AudioLoopComponent>
</Entity>