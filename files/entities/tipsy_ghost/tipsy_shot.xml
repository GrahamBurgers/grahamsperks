<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
    <VelocityComponent
      gravity_y="30"
      air_friction="-0.1"
	    mass="0.04"
	  >
    </VelocityComponent>
	</Base>

  <ProjectileComponent 
    lob_min="2.5"
    lob_max="2.7"
    speed_min="850"
    speed_max="950"
    friction="0"
    direction_random_rad="0.05"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="0" 
    on_collision_die="1"
    die_on_liquid_collision="0"
    lifetime="120"
    damage="1.2"
    penetrate_world="1"
    penetrate_world_velocity_coeff="1"
    penetrate_entities="0"
    collide_with_entities="1"
    velocity_sets_scale="1"
    ragdoll_force_multiplier="0.04"
    hit_particle_force_multiplier="5.5"
    camera_shake_when_shot="1.0"
    shoot_light_flash_r="255"
    shoot_light_flash_g="140"
    shoot_light_flash_b="10"
    shoot_light_flash_radius="60"
    knockback_force="0.6"
	  physics_impulse_coeff="10000"
    friendly_fire="0"
    never_hit_player="1"
    collide_with_world="0"
    >
    <config_explosion
      never_cache="0" 
      camera_shake="4" 
      explosion_radius="15"
      explosion_sprite="data/particles/explosion_016.xml" 
      explosion_sprite_lifetime="0" 
      destroy_non_platform_solid_enabled="1"
      create_cell_probability="100" 
      create_cell_material="soil"
      hole_destroy_liquid="1"
      hole_enabled="1" 
      is_digger="1"
      ray_energy="800000"
      damage="0"
      particle_effect="0"
      damage_mortals="1"
      physics_explosion_power.min="0.05" 
      physics_explosion_power.max="0.1"
      physics_throw_enabled="1"
      shake_vegetation="1" 
      sparks_count_min="4" 
      sparks_count_max="10" 
      sparks_enabled="1" 
      stains_enabled="1"
      stains_radius="12"
      >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    image_file="mods/grahamsperks/files/projectiles_gfx/whiskey_ball.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    rect_animation="" 
    additive="0"
    emissive="0"
    >
  </SpriteComponent>

  <ParticleEmitterComponent 
    emitted_material_name="alcohol_gas"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-10"
    y_vel_max="10"
    count_min="1"
    count_max="1"
    lifetime_min="0.1"
    lifetime_max="0.3"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="2"
    is_emitting="1"
    >
  </ParticleEmitterComponent>
  
  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_fire_small">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/grahamsperks/files/entities/tipsy_ghost/tipsy_shot.xml"
		>
	</VariableStorageComponent>
  
</Entity>
