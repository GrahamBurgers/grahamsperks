		damage_deactivation_time_max="10" >
	</PhysicsAIComponent>

	<PhysicsBodyComponent 
		force_add_update_areas="1"
		hax_fix_going_through_ground="1"
		hax_fix_going_through_sand="1"
		allow_sleep="0" 
