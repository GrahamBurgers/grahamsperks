<Entity tags="hittable,teleportable_NOT,item_physics,item_pickup,brimstone,thunderstone,forgeable,magmastone,grahams_things" >
  <Base file="data/entities/base_item_projectile.xml">
    <ProjectileComponent>
      <damage_by_type
      fire="0.5"
      electricity="0.5"
      >
      </damage_by_type>
    </ProjectileComponent>
  </Base>

  <!-- physical presence -->

  <PhysicsBodyComponent 
    _tags="enabled_in_world"
    uid="1" 
    allow_sleep="1" 
    angular_damping="0" 
    fixed_rotation="0" 
    is_bullet="1" 
    linear_damping="0"
    auto_clean="0"
    on_death_leave_physics_body="1"
    hax_fix_going_through_ground="1"
  ></PhysicsBodyComponent>
  
  <PhysicsImageShapeComponent 
    body_id="1"
    centered="1"
    image_file="mods/grahamsperks/files/pickups/magmastone.png"
    material="graham_sulphur_box2d"
  ></PhysicsImageShapeComponent>
  
  <PhysicsThrowableComponent
    max_throw_speed="280"
    throw_force_coeff="1.8"
  ></PhysicsThrowableComponent>

  <VelocityComponent
    _tags="enabled_in_world"
  ></VelocityComponent>
  
  <GameEffectComponent 
    _tags="enabled_in_hand"
    effect="PROTECTION_FIRE"
    frames="-1"
  ></GameEffectComponent>

  <GameEffectComponent 
    _tags="enabled_in_hand"
    effect="FRIEND_FIREMAGE"
    frames="-1"
  ></GameEffectComponent>

  <GameEffectComponent 
    _tags="enabled_in_hand"
    effect="PROTECTION_ELECTRICITY"
    frames="-1"
  ></GameEffectComponent>

  <GameEffectComponent 
    _tags="enabled_in_hand"
    effect="FRIEND_THUNDERMAGE"
    frames="-1"
  ></GameEffectComponent>

  <!-- steaming -->

  <MagicConvertMaterialComponent
    _tags="enabled_in_hand,enabled_in_world"
    kill_when_finished="0"
    steps_per_frame="24"
    from_material_array="lava,acid,radioactive_liquid,radioactive_liquid_yellow,magic_liquid_unstable_teleportation,magic_liquid_polymorph,poison,alcohol"
    to_material_array="graham_lava,graham_acid,water,water,magic_liquid_teleportation,magic_liquid_random_polymorph,material_darkness,sima"
    clean_stains="0"
    is_circle="1"
    radius="24" 
    reaction_audio_amount="0.005"
  >
  </MagicConvertMaterialComponent>

  <MagicConvertMaterialComponent
    _tags="enabled_in_hand,enabled_in_world"
    kill_when_finished="0"
    steps_per_frame="3"
    from_material_tag="[meat]"
    to_material="meat_done"
    clean_stains="0"
    is_circle="1"
    radius="22" 
    reaction_audio_amount="0.005"
  >
  </MagicConvertMaterialComponent>
  
  <!-- item -->

  <SpriteComponent
    _tags="enabled_in_hand"
    _enabled="0"
    offset_x="4"
    offset_y="4"
    image_file="mods/grahamsperks/files/pickups/magmastone_inhand.png"
  ></SpriteComponent>

  <ItemComponent
    _tags="enabled_in_world"
    item_name="$graham_magmacore_name"
    ui_description="$graham_magmacore_desc"
    ui_sprite="mods/grahamsperks/files/pickups/magmastone.png"
    max_child_items="0"
    is_pickable="1"
    is_equipable_forced="1"
    preferred_inventory="QUICK"
  ></ItemComponent>

  <UIInfoComponent
    _tags="enabled_in_world"
    name="$graham_magmacore_name">
  </UIInfoComponent>
  
  <SpriteParticleEmitterComponent
		sprite_file="data/particles/ray.xml" 
		delay="0"
		lifetime="1.5"
		color.r="1" color.g="0.5" color.b="1" color.a="1.0"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-3.5"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="0"
		velocity_slowdown="0"
		rotation="0"
		angular_velocity="0"
		scale.x="1" scale.y="0"
		scale_velocity.x="-0.3" scale_velocity.y="3"
		emission_interval_min_frames="3"
		emission_interval_max_frames="6"
		emissive="1"
		additive="1"
		count_min="1" count_max="1"
		use_velocity_as_rotation="1"
		randomize_position.min_x="-2"
		randomize_position.max_x="2"
		randomize_position.min_y="-2"
		randomize_position.max_y="2"
		randomize_velocity.min_x="-30"
		randomize_velocity.max_x="30"
		randomize_velocity.min_y="-30"
		randomize_velocity.max_y="30"
		velocity_always_away_from_center="1">
	</SpriteParticleEmitterComponent>
	
	<AbilityComponent
		ui_name="$graham_magmacore_name"
		throw_as_item="1"
		><gun_config
			deck_capacity="0"
		></gun_config>
	</AbilityComponent>
  
   <ParticleEmitterComponent 
    _tags="enabled_in_world,enabled_in_hand,item_identified"
    _enabled="0"
    emitted_material_name="spark"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-3"
    x_pos_offset_max="3"
    y_pos_offset_min="-3"
    y_pos_offset_max="3"
    x_vel_min="-2"
    x_vel_max="2"
    y_vel_min="-20"
    y_vel_max="-10"
    count_min="1"
    count_max="2"
    lifetime_min="0.4"
    lifetime_max="0.6"
    create_real_particles="0"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="5"
    emission_interval_max_frames="15"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    _tags="enabled_in_world,enabled_in_hand,item_identified"
    _enabled="0"
    emitted_material_name="spark"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-3"
    x_pos_offset_max="3"
    y_pos_offset_min="-3"
    y_pos_offset_max="3"
    x_vel_min="-2"
    x_vel_max="2"
    y_vel_min="-20"
    y_vel_max="-10"
    count_min="1"
    count_max="1"
    lifetime_min="0.4"
    lifetime_max="0.6"
    create_real_particles="1"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="15"
    emission_interval_max_frames="25"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    _tags="enabled_in_world,enabled_in_hand,item_identified"
    _enabled="0"
    emitted_material_name="smoke"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-3"
    x_pos_offset_max="3"
    y_pos_offset_min="-3"
    y_pos_offset_max="3"
    x_vel_min="-2"
    x_vel_max="2"
    y_vel_min="-20"
    y_vel_max="-10"
    count_min="1"
    count_max="1"
    lifetime_min="0.4"
    lifetime_max="0.6"
    create_real_particles="1"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="15"
    emission_interval_max_frames="30"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <LightComponent 
    _tags="enabled_in_hand,enabled_in_world,item_identified"
    _enabled="1" 
    radius="130"
    fade_out_time="1.5" 
    r="240"
    g="180"
    b="120" >
  </LightComponent>

  <LightComponent 
    _tags="enabled_in_hand,enabled_in_world,item_identified"
    _enabled="1" 
    radius="16"
    fade_out_time="1.5" 
    r="255"
    g="255"
    b="255" >
  </LightComponent>

  <!-- real fire emitters -->

   <ParticleEmitterComponent 
      _tags="enabled_in_hand,enabled_in_world"
      _enabled="0"
      emitted_material_name="smoke"
      offset.x="0"
      offset.y="0"
      x_pos_offset_min="-3"
      x_pos_offset_max="3"
      y_pos_offset_min="-3"
      y_pos_offset_max="3"
      x_vel_min="-0"
      x_vel_max="0"
      y_vel_min="0"
      y_vel_max="0"
      count_min="5"
      count_max="5"
      lifetime_min="0.1"
      lifetime_max="0.3"
      create_real_particles="1"
      emit_cosmetic_particles="0"
      emission_interval_min_frames="60"
      emission_interval_max_frames="250" >
  </ParticleEmitterComponent>

  <AudioComponent
      _tags="enabled_in_hand"
    file="data/audio/Desktop/projectiles.bank"
    event_root="player_projectiles/torch"
    set_latest_event_position="1" >
  </AudioComponent>

  <AudioLoopComponent
    _tags="enabled_in_hand,enabled_in_world"
    file="data/audio/Desktop/projectiles.bank"
    event_name="player_projectiles/torch/loop"
    auto_play_if_enabled="1"
    play_on_component_enable="1" >
  </AudioLoopComponent>

</Entity>
