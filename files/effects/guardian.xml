<Entity>

	<InheritTransformComponent 
		_enabled="1" >
    </InheritTransformComponent>

	<LuaComponent 
		execute_on_added="1"
		remove_after_executed="0"
		script_source_file="mods/grahamsperks/files/scripts/guardian_damage.lua"
		execute_every_n_frame="1">
	</LuaComponent>

	<LuaComponent 
		execute_on_added="0"
		remove_after_executed="1"
		script_source_file="mods/grahamsperks/files/scripts/guardian_delete.lua"
		execute_every_n_frame="1">
	</LuaComponent>

	<LifetimeComponent
		lifetime="1200"
		>
	</LifetimeComponent>

	<UIIconComponent
		name="$graham_status_guardian"
		description="$graham_statusdesc_guardian"
		icon_sprite_file="mods/grahamsperks/files/effects/guardian.png"
		is_perk="0"
		display_above_head="0"
		display_in_hud="1"
		>
	</UIIconComponent>

	<LuaComponent
		script_source_file="mods/grahamsperks/files/scripts/protection_field.lua"
		execute_every_n_frame="5"
		>
	</LuaComponent>

	<!-- attracted particles -->
	<ParticleEmitterComponent 
		emitted_material_name="spark_yellow"
		gravity.y="0.0"
		lifetime_min="0.5"
		lifetime_max="1.0"
		count_min="1"
		count_max="3"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		area_circle_radius.max="46"
		cosmetic_force_create="0"
		airflow_force="0.5"
		airflow_time="0.01"
		airflow_scale="0.05"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		velocity_always_away_from_center="100"
		emit_cosmetic_particles="1"
		is_emitting="1" 
		draw_as_long="1"
		attractor_force="12"
		>
	</ParticleEmitterComponent>

	<!-- outer ring -->
  	<ParticleEmitterComponent 
		emitted_material_name="spark_yellow"
		gravity.y="0.0"
		lifetime_min="0.2"
		lifetime_max="0.8"
		count_min="5"
		count_max="10"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		area_circle_radius.min="46"
		area_circle_radius.max="46"
		cosmetic_force_create="0"
		airflow_force="0.3"
		airflow_time="0.01"
		airflow_scale="0.05"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		is_emitting="1" >
	</ParticleEmitterComponent>

